<Window x:Class="Process_PC_Manager.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Process_PC_Manager"
        mc:Ignorable="d"
        Height="150" Width="225" Background="LightGray" WindowStyle="None">
    <Grid>
        <TextBox x:Name="Username" HorizontalAlignment="Left" Height="23" Margin="87,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Height="23" Margin="87,68,0,0" VerticalAlignment="Top" Width="120" KeyDown="OnKeyDownHandler"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top"/>
        <Button Content="Enter" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Width="75" Click="Enter_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="132,110,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click"/>
        <Label HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5">Remote Administrator Credentials</Label>
    </Grid>
</Window>
