<Window x:Class="Process_PC_Manager.ManageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Process_PC_Manager"
        mc:Ignorable="d"
        Title="Computer Management" Height="350" Width="375" Background="LightGray">
    <Grid>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="257,10,0,0" VerticalAlignment="Top" Width="75" Click="Connect_Click"/>
        <TextBox x:Name="Details" Margin="10,86,10,10" FontSize="14" 
                 Background="LightGray" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"/>
        <Label Content="Host Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="HostName" HorizontalAlignment="Left" Margin="87,10,0,0" VerticalAlignment="Top" Width="125" SelectionChanged="HostName_SelectionChanged"/>

        <Label x:Name="ViewLabel"  Content="Data to View:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
        <ComboBox x:Name="ViewBox" HorizontalAlignment="Left" Margin="95,45,0,0" VerticalAlignment="Top" Width="117" Visibility="Hidden" SelectionChanged="ViewBox_SelectionChanged"/>

    </Grid>
</Window>
